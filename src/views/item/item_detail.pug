extends ../base

block head
  link(rel="stylesheet", href="/css/item/item_detail.css")

block content
  main
    div.container
      img(src=item.image || '/img/item/default.jpg', alt="").rounded
      div.item-details.bg-secondary.rounded
        h2 #{item.name}
        if item.description
          p #{item.description}
        div.item-details__categories
          i(data-feather='tag')
          p #{item.category.length ? item.category.map(c => c.name).join(', ') : 'Item sem categoria'}
      div.price-and-stock
        p.price.bg-secondary.rounded #{item.priceFormatted}
        p.stock.bg-secondary.rounded #{item.stock} em estoque
  div.actions
    a.btn.btn-primary(href=`/item/${item._id}/update`)
      i(data-feather='edit-2')
    a.btn.btn-primary(href=`/item/${item._id}/remove`)
      i(data-feather='trash')
